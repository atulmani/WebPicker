{
  "hosting": {
	  "public": "public",
	  "rewrites": [
		{
		  "source": "/hcerp/**",
		  "destination": "/index.html"
		}
	  ],
	  "headers": [
		{
		  "source": "/hcerp/**",
		  "headers": [
			{
			  "key": "Cache-Control",
			  "value": "no-cache"
			}
		  ]
		}
	  ],
	  "cleanUrls": true,
	  "trailingSlash": false,
	  "ignore": [
		"firebase.json",
		"**/.*",
		"**/node_modules/**"
	  ]
	}

}
